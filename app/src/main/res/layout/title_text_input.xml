<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/TitleTextInput_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/TitleTextInput_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_text"
        android:textSize="20dp"
        android:inputType="textUri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleTextInput_title"/>

    <TextView
        android:id="@+id/TitleTextInput_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textAlignment="viewStart"
        android:background="@color/cardview_light_background"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/TitleTextInput_text"
        app:layout_constraintTop_toTopOf="@+id/TitleTextInput_text" />

    <Button
        android:id="@+id/TitleTextInput_btnCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.01"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/TitleTextInput_text"
        app:layout_constraintStart_toStartOf="@+id/TitleTextInput_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
