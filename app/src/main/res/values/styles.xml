<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FieldStyle">
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="FieldHeaderStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="SimpleRow">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="SimpleRowCommentStyle">
        <item name="android:textColor">#7777</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Log">
        <item name="singleLine">false</item>
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ErrorLog">
        <item name="singleLine">false</item>
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>